extends layout

block content
  h1(class="text-8xl font-bold text-center") 
    p(class="text-sky-300") Blog
      p(class="text-sky-600") bloomexperiences
  nav
    div(class="flex justify-center items-center flex-col ") 
      div(class="categories  rounded-2xl mt-5 mb-2")  
        each category in categorys
          div(class="float-left p-0.1  ml-0.5 mr-0.5")
            a(href=category.url)
              img(src=category.image alt=category.name class="w-20 rounded-full border-solid border-2  hover:border-color-primary  border-color-segundary ")
              p(class="text-xs text-center")=category.name
  div(class="w-10/12 ml-auto mr-auto")
    div(class="types  mt-5 mb-2 w-full") 
      div(class="grid grid-cols-4 grid-rows-1")
        each type in types
          if type.selected
            div(class="float-left w-full bg-color-primary")
              div(class="ml-auto mr-auto w-7 h-7 ")
                a(href=type.url)
                  img(src=type.image alt=type.name)
          else
            div(class="float-left m-auto w-7 h-7")
              a(href=type.url)
                img(src=type.image alt=type.name)

    div(class="border-t-2 border-b-2") 
      div(class=" grid grid-cols-4")
        each post in posts
          div(class="float-left hover:border-color-primary border-solid hover:border-2")
            a(href=post.url)
              img(src=post.mainImage alt=post.name )
