extends layout
block content
  div(class="w-8/12 ml-auto mr-auto")
    div(class="border-t-2 min-h-full") 
      div(class=" grid grid-cols-4")
        each post in posts
          a(href=post.url target="_blank")
            div(class="float-left hover:border-color-primary border-solid hover:border-2 relative h-60 w-full" onclick='showModal("video-'+post.id+'")' )
              div(style="background-image:url('/images/instagram/"+post.id+".jpg');"   alt=post.caption class="bg-cover bg-no-repeat bg-center w-full h-full" )


