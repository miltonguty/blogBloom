extends layout
block content
  div(class="w-8/12 ml-auto mr-auto")
    div(class="border-t-2 min-h-full") 
      div(class=" grid grid-cols-4")
        each post in posts
          div(class="float-left hover:border-color-primary border-solid hover:border-2" onclick='showModal("video-'+post.id+'")' )
            img(src=post.imagePreview,  alt=post.name )
          div(id='video-'+post.id class="hidden")
            div(class="flex flex-row")
              div(class="w-2/3  flex justify-center items-center")
                video(class="max-h-695" controls)
                  source(src=post.mainMedia  type="video/mp4")
              div(class="w-1/3 text-sm p-5 border-solid border-l")=post.title
  div(id="myModal" class="modal")
    div(class="close font-mono text-3xl text-center border-color-primary rounded-full border-2 w-10 ml-5  -mt-6  border-solid hover:bg-color-segundary hover:cursor-pointer" )='X' 
    div(class="modal-content")
      div(id="modal-body")
  script(src="/javascripts/bloom.js") 

